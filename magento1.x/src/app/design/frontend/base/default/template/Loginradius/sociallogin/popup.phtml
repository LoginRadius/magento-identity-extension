        } else {
            if (!isset($_POST['EmailPopupOkButton'])) {
                ?>
                <div class="lr-noerror" id="lr-message"><?php echo __(Mage::helper('core')->htmlEscape('Please provide following details.')); ?></div>
            <?php
            }
        }
        if ($loginRadiusShowForm) {
            ?>
