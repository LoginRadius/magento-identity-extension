<?xml version="1.0"?>
<config>
    <sections>
        <socialshare translate="label" module="socialshare">
            <label>Social Share</label>
            <tab>socialconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1002</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>    
            <groups>
                <info translate="label">
                    <frontend_model>Loginradius_Activation_Model_Info</frontend_model>
                    <comment><![CDATA[]]></comment>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </info>
                <horizontalsharing translate="label">
                    <label>Horizontal Social Sharing</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store> 
                    <fields>
                        <horizontalshareenable translate="label">
                            <label>Enable Horizontal Social Sharing</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment><![CDATA[Do you want to enable Horizontal Social Sharing for your website?]]>
                            </comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </horizontalshareenable>
                        <horizontalsharingtheme translate="label">
                            <label>Choose a theme</label>
                            <frontend_type>radios</frontend_type>
                            <source_model>Loginradius_Socialshare_Model_Source_Horizontalinterface</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </horizontalsharingtheme>
                        <horizontalsharingproviders translate="label">
                            <label>Sharing Providers</label>
                            <frontend_type>checkboxes</frontend_type>
                            <comment><![CDATA[<div style="clear: both !important;"><p class="note"><span>Selected providers will be displayed in the Social Sharing widget</span></p></div>]]></comment>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </horizontalsharingproviders>
                        <horizontalsharingprovidershidden translate="label">
                            <label>Rearrange Icons</label>
                            <frontend_type>hidden</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </horizontalsharingprovidershidden>
                        <horizontalcounterproviders translate="label">
                            <label>Sharing Providers</label>
                            <frontend_type>checkboxes</frontend_type>
                            <comment><![CDATA[<div style="clear: both !important;"><p class="note"><span>Selected providers will be displayed in the Social Sharing widget</span></p></div>]]></comment>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </horizontalcounterproviders>
                        <horizontalcounterprovidershidden translate="label">
                            <label>Rearrange Icons</label>
                            <frontend_type>hidden</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </horizontalcounterprovidershidden>
                        <horizontalshareproduct translate="label">
                            <label>Show Interface at Product Pages</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </horizontalshareproduct>
                    </fields>
                </horizontalsharing>
                <verticalsharing translate="label">
                    <label>Vertical Social Sharing</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>42</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store> 
                    <fields>
                        <verticalshareenable translate="label">
                            <label>Enable Vertical Social Sharing</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment><![CDATA[Do you want to enable Social Counter for your website?]]>
                            </comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verticalshareenable>
                        <verticalsharingtheme translate="label">
                            <label>Choose a theme</label>
                            <frontend_type>radios</frontend_type>
                            <source_model>Loginradius_Socialshare_Model_Source_verticalinterface</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verticalsharingtheme>
                        <verticalalignment translate="label">
                            <label>Alignment</label>
                            <frontend_type>select</frontend_type>
                            <comment><![CDATA[Select the position of the Social Counter widget with respect to page]]></comment>
                            <source_model>Loginradius_Socialshare_Model_Source_Verticalalignment</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verticalalignment>
                        <verticalsharingproviders translate="label">
                            <label>Sharing Providers</label>
                            <frontend_type>checkboxes</frontend_type>
                            <comment><![CDATA[<div style="clear: both !important;"><p class="note"><span>Selected providers will be displayed in the Social Counter widget</span></p></div>]]></comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verticalsharingproviders>
                        <verticalsharingprovidershidden translate="label">
                            <label>Rearrange Icons</label>
                            <frontend_type>hidden</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verticalsharingprovidershidden>
                        <verticalcounterproviders translate="label">
                            <label>Sharing Providers</label>
                            <frontend_type>checkboxes</frontend_type>
                            <comment><![CDATA[<div style="clear: both !important;"><p class="note"><span>Selected providers will be displayed in the Social Sharing widget</span></p></div>]]></comment>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verticalcounterproviders>
                        <verticalcounterprovidershidden translate="label">
                            <label>Rearrange Icons</label>
                            <frontend_type>hidden</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verticalcounterprovidershidden>
                        <verticalshareproduct translate="label">
                            <label>Show Interface at Product Pages</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verticalshareproduct>
                    </fields>
                </verticalsharing>
                <advancesharing translate="label">
                    <label>Advanced Social Sharing</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>43</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store> 
                    <fields>
                        <ismobile translate="label">
                            <label>Mobile Friendly</label>
                            <frontend_type>select</frontend_type>
                            <comment><![CDATA[Enable this option to show a mobile sharing interface to mobile users]]></comment>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ismobile>
                        <emailreadonly translate="label">
                            <label>Email content read only</label>
                            <comment><![CDATA[Your readers wont be able to change the Email Content if its read only]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </emailreadonly>
                        <emailsubject translate="label">
                            <label>Email Subject</label>
                            <comment><![CDATA[Please enter your desired email subject]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </emailsubject>
                        <emailmessage translate="label">
                            <label>Email Message</label>
                            <comment><![CDATA[Please enter your desired email message]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </emailmessage>
                        <shorturl translate="label">
                            <label>Short URL</label>
                            <comment><![CDATA[Enable this if you want the URL to be shortened using Ish.re]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shorturl>
                        <totalshare translate="label">
                            <label>Total Share</label>
                            <frontend_type>select</frontend_type>
                            <comment><![CDATA[Display the total shares URL got from all social providers]]></comment>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </totalshare>
                        <samepopup translate="label">
                            <label>Open all providers in a single window</label>
                            <frontend_type>select</frontend_type>
                            <comment><![CDATA[Disabling this opens all sharing providers in a new Popup]]></comment>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </samepopup>
                        <custompopup translate="label">
                            <label>Custom Popup Window Size</label>
                            <frontend_type>select</frontend_type>
                            <comment><![CDATA[Enable this if you want to change default Popup Window Size. [Default Size 530*530 Px]]]></comment>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custompopup> 
                        <popupheight translate="label">
                            <label>Popup window height</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Enter the height of the Sharing popup window, Default height is 530px]]></comment>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><custompopup>1</custompopup></depends>
                        </popupheight>
                        <popupwidth translate="label">
                            <label>Popup window width</label>
                            <comment><![CDATA[Enter the width of the Sharing popup window, Default width is 530px]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><custompopup>1</custompopup></depends>
                        </popupwidth>                        
                        <twittermention translate="label">
                            <label>Twitter handle</label>
                            <comment><![CDATA[Handle will be mentioned as suffix as "via @twitterhandle"]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </twittermention>
                        <twitterhash translate="label">
                            <label>Twitter hash tags</label>
                            <comment><![CDATA[Hashtag will be added to all tweets]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </twitterhash>
                        <facebookappid translate="label">
                            <label>Facebook App ID</label>
                            <comment><![CDATA[Enter the Facebook App Id if you want to track social sharing on your Facebook app]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebookappid>
                        <customoptions translate="label">
                            <label>Custom options for sharing interface</label>
                            <comment><![CDATA[Choose form the list of options you want to customize from the <a target="_blank" href="http://support.loginradius.com/hc/en-us/articles/211058363">link</a>]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>17</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customoptions>
                    </fields>
                </advancesharing>
            </groups>                
        </socialshare>
    </sections>
</config>