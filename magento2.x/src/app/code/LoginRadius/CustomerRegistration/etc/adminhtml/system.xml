<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Backend/etc/system_file.xsd">
    <system>
         <section id="lrcustomerregistration" translate="label" sortOrder="132" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Customer Registration</label>
            <tab>lractivation</tab>
            <resource>LoginRadius_CustomerRegistration::customerregistration_config</resource>
            <group id="redirection_settings" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Basic Configuration Options</label>
                <field id="enable_hosted_page" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Do you want to enable hosted page functionality?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip><![CDATA[Enable Hosted Page Functionality.]]></tooltip>
                </field>      
                <field id="login_redirection" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Redirection After Login</label>
                    <source_model>LoginRadius\CustomerRegistration\Model\Source\Redirection</source_model>
                </field>
                <field id="custom_login_redirection" translate="label" type="text" sortOrder="55" showInDefault="1" showInWebsite="0" showInStore="0">
                    <validate>required-entry</validate>
                    <depends>
                        <field id="login_redirection">custom</field>
                    </depends>
                </field>
                <field id="login_interface" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Are you want to redirect on login page while checkout?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                   <tooltip><![CDATA[Select Yes if you want to redirect on login page while checkout.]]></tooltip>
                </field>
            </group>
            <group id="interface_customization_settings" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Interface Customization Configuration Options</label>
                <field id="terms_conditions" translate="label" type="textarea" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                   <label>Display Terms and Condition</label>
                   <tooltip><![CDATA[This field is shown just above the submit button and displays the Terms and Conditions text to the user.]]></tooltip>
                </field>                   
            </group>
            <group id="password_customization_settings" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Password Customization Configuration Options</label>
                <field id="display_password_strength" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Display Password Strength</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>                      
                </field>  
            </group>
            <group id="email_template_settings" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Email Template Configuration Options</label>
                 <field id="welcome_email" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Welcome Email Template</label>
                    <source_model>LoginRadius\CustomerRegistration\Model\Source\Welcome</source_model>
                    <tooltip><![CDATA[Enter template name for Welcome Email.]]></tooltip>
                </field>
                <field id="forgot_email" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Reset Password Email Template</label>
                    <source_model>LoginRadius\CustomerRegistration\Model\Source\Resetpass</source_model>
                    <tooltip><![CDATA[Enter template name for Reset Password Email.]]></tooltip>
                </field>
                <field id="verification_email" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Email Verification Email Template</label>
                    <source_model>LoginRadius\CustomerRegistration\Model\Source\Verificationemail</source_model>
                    <tooltip><![CDATA[Enter template name for Email Verification Email.]]></tooltip>
                </field>
                <field id="instant_link" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Instant Link Login Email Template</label>
                    <source_model>LoginRadius\CustomerRegistration\Model\Source\Instantlink</source_model>
                    <tooltip><![CDATA[Enter template name for One clcik sign in Email.]]></tooltip>
                </field>
            </group>
            <group id="advance_settings" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Advance Configuration Options</label>
                <field id="ask_required_field_on_traditional_login" translate="label" type="select" sortOrder="24" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Ask Required Field On Traditional Login</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip><![CDATA[Enabling this property would prompt an interface of required fields for a traditional legacy or old user account, if the registration schema has changed.]]></tooltip>
                </field>
                <field id="username_login" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                   <label>Login with Username</label>
                   <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                   <tooltip><![CDATA[Select yes to allow user to login with username in your Magento website.]]></tooltip>
                </field>                
                <field id="notification_time_out" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                   <label>Notification Message timeout</label>
                   <tooltip><![CDATA[Please enter the duration (in seconds) after which the response messages will get hidden..]]></tooltip>
                </field> 
                <field id="prompt_password_on_social_login" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Prompt Password On Social Login</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip><![CDATA[After authentication through Social Login, prompt the user for a password. By doing so, a traditional account will be generated for the user in addition to his/her social account.]]></tooltip>
                </field>
                <field id="always_ask_email_for_unverified" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Always Ask Email For Unverified Account</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip><![CDATA[Every time an unverified user tries to log in, prompt for email address.]]></tooltip>
                </field>
                <field id="instant_link_login" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Instant link login</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip><![CDATA[This option also has to be enabled by LoginRadius support from backend.]]></tooltip>
                </field>                           
                <field id="custom_js_options" translate="label" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Custom Options</label>
                    <tooltip><![CDATA[Custom Customer Registration options that are added in the LoginRadius js.]]></tooltip>
                </field>  
            </group>  
            <group id="phone_login_settings" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Phone Login Configuration Options</label>         
                <field id="exist_phone_no" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Check Phone Number Exist</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>                    
                </field>              
                <field id="sms_template" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Welcome SMS Template</label>  
                    <source_model>LoginRadius\CustomerRegistration\Model\Source\Welcomesms</source_model>
                </field>              
                <field id="sms_template_phone_verification" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>SMS Template Phone Verification</label>   
                     <source_model>LoginRadius\CustomerRegistration\Model\Source\Verificationsms</source_model>
                </field>
                <field id="instant_otp_login" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Instant OTP login</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip><![CDATA[This option also has to be enabled by LoginRadius support from backend.]]></tooltip>
                </field> 
                <field id="instant_otp" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Instant OTP SMS Template</label>
                    <source_model>LoginRadius\CustomerRegistration\Model\Source\Instantotp</source_model>
                    <tooltip><![CDATA[Enter template name for Instant OTP SMS.]]></tooltip>
                </field>
            </group>          
            <group id="two_fa_settings" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Two factor Authentication Options</label>
                <field id="sms_template_2fa" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>SMS Template for two factor authentication</label>    
                    <source_model>LoginRadius\CustomerRegistration\Model\Source\Twofaauth</source_model>         
                </field>              
            </group>          
            <group id="debug_settings" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Debug Configuration Options</label>
                <field id="debug" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Debugging</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip><![CDATA[If your customers are not able to login, Please enable debug mode to display errors.]]></tooltip>
                </field>
            </group>
        </section>
    </system>
</config>