<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <lrsocialshare>
            <horizontal_share>
                <enabled>1</enabled>
                <enabledMobile>1</enabledMobile>
                <theme>0</theme>
                <share_provider></share_provider>
                <count_provider></count_provider>
                <counter_provider_theme>facebook-like|facebook-recommend|facebook-send|twitter-tweet|pinterest-pin-it</counter_provider_theme>
                <rearrange_icons>facebook|google|twitter|email|linkedin</rearrange_icons>
                <show_product_pages>1</show_product_pages>
            </horizontal_share>
            <vertical_share>
                <enabled>1</enabled>
                <theme>0</theme>
                <alignment>0</alignment>
                <share_provider></share_provider>
                <count_provider></count_provider>
                <rearrange_icons>facebook|google|twitter|email|linkedin</rearrange_icons>
                 <counter_provider_theme>facebook-like|facebook-recommend|facebook-send|twitter-tweet|pinterest-pin-it</counter_provider_theme>
                <show_product_pages>1</show_product_pages>              
            </vertical_share>
            <advance_setting>
                <desired_email></desired_email>
                <email_sbject></email_sbject>
                <email_content_read_only>0</email_content_read_only>
                <short_url>0</short_url>
                <single_window>0</single_window>
                <twitter_mention></twitter_mention>
                <twitter_hash_tag></twitter_hash_tag>
                <facebook_app_id></facebook_app_id>
                <custom_popup>0</custom_popup>
                <popup_height></popup_height>
                <popup_width></popup_width>
                <custom_option></custom_option>
                
            </advance_setting>
        </lrsocialshare>
    </default>
</config>